<Application x:Class="gov.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:gov"
             xmlns:views="clr-namespace:gov.Views"
             xmlns:viewModels="clr-namespace:gov.ViewModels"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:ConfigViewModel}">
            <views:ConfigView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:WorkViewModel}">
            <views:WorkView/>
        </DataTemplate>
    </Application.Resources>
</Application>
